<UserControl x:Class="MonitorAppWPF.DbControls.AnimalsDbControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonitorAppWPF.DbControls"
             mc:Ignorable="d"
             d:DesignHeight="518" d:DesignWidth="857" BorderBrush="Black">
    <UserControl.Resources>
        <Storyboard x:Key="_sbExpandEdit">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,-350,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="_sbcollapseEdit">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
    </UserControl.Resources>
    <Grid x:Name="_grdBigMain" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="RosyBrown">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Customer table" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="10,12,10,10" Click="button_Click" />
        <Button Name="_btnSaveEdit" Grid.Row="0" Click="BtnSaveEdit_Click" Content="Save Edit" HorizontalAlignment="Left" 
                VerticalAlignment="Top" Margin="100,12,10,10" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="_smallGrid" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <DataGrid x:Name="_gdCustomers" VerticalAlignment="Stretch" Margin="0,5,0,0" SelectionMode="Single"
                          ItemsSource="{Binding}" SelectionChanged="TbCustomers_SelectionChanged" 
                          AutoGenerateColumns="false">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Firstname" Binding="{Binding Path=NAME}" />
                        <DataGridTextColumn Header="Age" Binding="{Binding Path=AGE}" />
                        <DataGridTextColumn Header="Gender" Binding="{Binding Path=TYPE}" />
                        <DataGridTextColumn Header="Type" Binding="{Binding Path=TYPE}" />
                        <DataGridTextColumn Header="Vacination" Binding="{Binding VACINATION}" />
                        <DataGridTextColumn Header="Checkup" Binding="{Binding Path=CHECKUP}" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Path=STATUS}" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="1" Panel.ZIndex="2" Name="_pnEditSection" HorizontalAlignment="Stretch" Margin="0,5,0,0" 
                            Background="DarkGray" Visibility="Collapsed" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer>
                            <StackPanel>
                                <Grid>
                                    <TextBlock Text="FirstName" HorizontalAlignment="Left" Margin="5,5,0,0" />
                                    <TextBox x:Name="_tbFirstName" HorizontalAlignment="Left" Margin="95,5,0,0" Width="150" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                        <!--<Button Name="_btnSaveEdit" Grid.Row="1" Click="BtnSaveEdit_Click" Content="Save Edit"/>-->
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
