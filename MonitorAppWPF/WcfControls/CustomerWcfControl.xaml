<UserControl x:Class="MonitorAppWPF.WcfControls.CustomerWcfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MonitorAppWPF.WcfControls"
             mc:Ignorable="d" 
             d:DesignHeight="518" d:DesignWidth="857" BorderBrush="Black">
    <Grid x:Name="_grdMain" Background="RosyBrown">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="_btnCustomers" Content="Customer table" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Margin="10,12,0,10"/>
            <Button x:Name="_btnCreateNewCustomer" Content="New" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Margin="10,12,0,10"/>
            <Button x:Name="_btnEditCustomer" Content="edit"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="10,12,0,10"/>
        </StackPanel>
        <Grid x:Name="_grdContent" Grid.Row="1">
            
        </Grid>
    </Grid>
</UserControl>
